<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playerBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="12dp"
    android:visibility="gone"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 进度条 -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_player" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <!-- 音乐图标/专辑图 -->
            <ImageView
                android:id="@+id/imageMusicIcon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_music_icon"
                android:padding="10dp"
                android:src="@drawable/ic_music_note"
                app:tint="@color/primary" />

            <!-- 歌曲信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textSongName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="未在播放"
                    android:textColor="@color/on_surface"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textTaskName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- 时间显示 -->
            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="00:00"
                android:textColor="@color/secondary"
                android:textSize="12sp" />

            <!-- 播放/暂停按钮 -->
            <ImageButton
                android:id="@+id/buttonPlayPause"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_play_button"
                android:contentDescription="播放/暂停"
                android:padding="10dp"
                android:src="@drawable/ic_pause"
                app:tint="@color/on_primary" />

            <!-- 停止按钮 -->
            <ImageButton
                android:id="@+id/buttonStop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="停止"
                android:src="@drawable/ic_stop"
                app:tint="@color/on_surface_variant" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
