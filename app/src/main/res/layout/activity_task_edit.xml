<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".presentation.ui.task.TaskEditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/on_primary"
            app:title="添加任务"
            app:titleTextColor="@color/on_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 顶部任务信息区域（可滚动） -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewTaskInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <!-- 任务名称 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutTaskName"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/task_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTaskName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="50" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- 全天播放开关 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全天播放"
                            android:textColor="@color/on_surface"
                            android:textSize="@dimen/text_size_md" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开启后持续播放，直到手动关闭"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/text_size_sm" />

                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchAllDayPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 时间范围容器（全天播放关闭时显示） -->
                <LinearLayout
                    android:id="@+id/layoutTimeRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_md">

                    <!-- 开始时间 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutStartTime"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:hint="@string/start_time">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editStartTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 结束时间 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutEndTime"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:hint="@string/end_time">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editEndTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- 播放模式和播放设备 - 水平排列 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:orientation="horizontal">

                    <!-- 播放模式 - 点击切换 -->
                    <LinearLayout
                        android:id="@+id/layoutPlayMode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_sm">

                        <ImageView
                            android:id="@+id/imagePlayMode"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_play_sequence"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/textPlayMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="@string/play_mode_sequence"
                            android:textColor="@color/on_surface"
                            android:textSize="@dimen/text_size_sm" />

                    </LinearLayout>

                    <!-- 播放设备 - 点击切换 -->
                    <LinearLayout
                        android:id="@+id/layoutOutputDevice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_sm">

                        <ImageView
                            android:id="@+id/imageOutputDevice"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_speaker"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/textOutputDevice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="扬声器"
                            android:textColor="@color/on_surface"
                            android:textSize="@dimen/text_size_sm" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textBluetoothStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/text_size_xs"
                    android:visibility="gone" />

                <!-- 重复日期 - 点击弹出选择 -->
                <LinearLayout
                    android:id="@+id/layoutRepeatDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_repeat"
                        app:tint="@color/primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重复"
                            android:textColor="@color/on_surface"
                            android:textSize="@dimen/text_size_sm" />

                        <TextView
                            android:id="@+id/textRepeatDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="不重复"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/text_size_xs" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/on_surface_variant" />

                </LinearLayout>

                <!-- 随机暂停配置 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardRandomPause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/outline"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <!-- 随机暂停开关 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/random_pause"
                                    android:textColor="@color/on_surface"
                                    android:textSize="@dimen/text_size_md" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="歌曲播放完成后随机暂停一段时间"
                                    android:textColor="@color/secondary"
                                    android:textSize="@dimen/text_size_sm" />

                            </LinearLayout>

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switchRandomPause"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <!-- 时间范围配置（开关打开时显示） -->
                        <LinearLayout
                            android:id="@+id/layoutPauseRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_md"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/random_pause_range"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_sm" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <!-- 最小时间 -->
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/layoutMinPause"
                                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/random_pause_min">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editMinPause"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:maxLength="2"
                                        android:text="2" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/spacing_sm"
                                    android:text=" - "
                                    android:textColor="@color/on_surface"
                                    android:textSize="@dimen/text_size_lg" />

                                <!-- 最大时间 -->
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/layoutMaxPause"
                                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/random_pause_max">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editMaxPause"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:maxLength="2"
                                        android:text="6" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textPauseRangeError"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textColor="@color/error"
                                android:textSize="@dimen/text_size_xs"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 音乐列表区域 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/outline"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 音乐列表头部 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/spacing_md"
                            android:background="@color/surface_variant">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_music_note"
                                app:tint="@color/primary" />

                            <TextView
                                android:id="@+id/textMusicCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/spacing_sm"
                                android:text="歌曲列表 (0)"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_sm"
                                android:textStyle="bold" />

                            <!-- 从歌单导入 -->
                            <ImageButton
                                android:id="@+id/buttonImportFromPlaylist"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="从歌单导入"
                                android:src="@drawable/ic_folder"
                                app:tint="@color/primary" />

                            <!-- 选择文件 -->
                            <ImageButton
                                android:id="@+id/buttonSelectAudio"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="@dimen/spacing_xs"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="选择文件"
                                android:src="@drawable/ic_add_file"
                                app:tint="@color/primary" />

                        </LinearLayout>

                        <!-- 分割线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider" />

                        <!-- 空状态提示 -->
                        <LinearLayout
                            android:id="@+id/layoutEmptyMusic"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_music_note"
                                android:alpha="0.3"
                                app:tint="@color/on_surface_variant" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:text="点击右上角添加音乐"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <!-- 音乐列表 -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewAudio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
